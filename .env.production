# ==================================
# MONOGRAM - Production Environment
# ==================================
# This file contains production environment variables
# Set these in your hosting platform (Vercel, Netlify, etc.)
# NEVER commit actual secrets to version control
# ==================================

# ----------------------------------
# SUPABASE CONFIGURATION (Required)
# ----------------------------------
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}
DATABASE_URL=${DATABASE_URL}
DIRECT_URL=${DIRECT_URL}

# ----------------------------------
# APPLICATION URLS
# ----------------------------------
VITE_APP_URL=https://monogram.app
VITE_API_BASE_URL=https://api.monogram.app
NEXT_PUBLIC_SITE_URL=https://monogram.app

# ----------------------------------
# AUTHENTICATION & SECURITY
# ----------------------------------
JWT_SECRET=${JWT_SECRET}
CORS_ALLOWED_ORIGINS=https://monogram.app,https://www.monogram.app
SESSION_COOKIE_NAME=monogram_session
SESSION_MAX_AGE=604800

# ----------------------------------
# EMAIL SERVICE (Enable in production)
# ----------------------------------
EMAIL_SERVICE_PROVIDER=resend
RESEND_API_KEY=${RESEND_API_KEY}
EMAIL_FROM=Monogram <noreply@monogram.app>
WELCOME_EMAIL_TEMPLATE_ID=${WELCOME_EMAIL_TEMPLATE_ID}
NEWSLETTER_TEMPLATE_ID=${NEWSLETTER_TEMPLATE_ID}
SPACE_INVITE_TEMPLATE_ID=${SPACE_INVITE_TEMPLATE_ID}

# ----------------------------------
# FILE STORAGE
# ----------------------------------
VITE_STORAGE_BUCKET_AVATARS=avatars
VITE_STORAGE_BUCKET_EXPORTS=exports
VITE_STORAGE_BUCKET_BADGES=badges
MAX_FILE_SIZE=5242880
ALLOWED_AVATAR_TYPES=image/jpeg,image/png,image/webp,image/gif

# ----------------------------------
# ANALYTICS & MONITORING
# ----------------------------------
VITE_PLAUSIBLE_DOMAIN=monogram.app
VITE_PLAUSIBLE_API_HOST=https://plausible.io
VITE_SENTRY_DSN=${SENTRY_DSN}
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}
SENTRY_ORG=monogram
SENTRY_PROJECT=monogram

# ----------------------------------
# FEATURE FLAGS (Production)
# ----------------------------------
VITE_FEATURE_EMAIL_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_FILE_UPLOADS=true
VITE_FEATURE_EXPORT_PDF=true
VITE_FEATURE_BADGES=true

# ----------------------------------
# RATE LIMITING & QUOTAS
# ----------------------------------
MAX_SPACES_PER_USER=5
MAX_MEMBERS_PER_SPACE=12
MAX_RESPONSES_PER_WEEK=50
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ----------------------------------
# APPLICATION SETTINGS
# ----------------------------------
NODE_ENV=production
VITE_DEBUG=false
API_TIMEOUT=30000
TZ=UTC

# ----------------------------------
# PRODUCTION SECURITY
# ----------------------------------
# These should ALWAYS be false in production
DEV_DISABLE_CORS=false
DEV_MOCK_AUTH=false
DEV_SEED_DATABASE=false
